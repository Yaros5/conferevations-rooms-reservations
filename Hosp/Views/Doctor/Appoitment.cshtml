@model Doctor?

@{
    ViewBag.Title = "title";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style_doctor.css">
    <link rel="stylesheet" href="/css/site.css">
    <title>Document</title>
</head>

<header>
    <div class = "fix_bug">
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <div class="container-fluid ">
                <h1 class="page header text-light">Online Hospital</h1>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link disabled " aria-current="page" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Doctor" asp-action="List">Doctor</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active " asp-controller="Hospital" asp-action="HospitalList">Hospital</a>
                        </li>
                    </ul>


                </div>
            </div>
        </nav>
    </div>
</header>
<div class="d-flex ">
    <div class="container flex-grow-1">
        <div class="card container-sm shadow my-5">
            <img src="@Model.Image" alt="" class="card-img-top mt-2" >
            <div class="card-body">
                <h3 class="card-title">@Model.Name @Model.LastName</h3>
                <h4 class="text-secondary">@Model.Profesion</h4>
                <p class="card-text">@Model.Info <br>WorK time: @Model.StartHour-@Model.FinishHour</p>
            </div>
        </div>
    </div>
    <form asp-controller ="Doctor" asp-action="Appoitment" class="container needs-validation mt-5" novalidate method="post" >
        <input name="DoctorId" type="hidden" value="@Model.ID">
        <div class="size">
            <label for="validationCustom01" class="form-label mt-3 ">Name</label>
        </div>
        <div class=" size">
            <input name = "NamePatient" type="text" class="form-control input_size " id="validationCustom01" value="@Model.Appointment" required>
        </div>
        <div class="valid-feedback">
            Looks good!
        </div>
        <div class="size">
            <label for="validationCustom01" class="form-label mt-3 ">ContactPatient</label>
        </div>
        <div class=" size">
            <input name = "ContactPatient" type="text" class="form-control input_size " id="validationCustom01" value="@Model.Appointment" required>
        </div>
        <div class="valid-feedback">
            Looks good!
        </div>
        <div class="size">
            <label for="validationCustom02" class="form-label">Info</label>
        </div>
        <div class="size">
            <input name = "Info" type="text" class="form-control input_size " id="validationCustom02" value="@Model.Appointment" required>
        </div>
        <div class="valid-feedback">
            Looks good!
        </div>
        <div class="size">
            <label for="validationCustomUsername" class="form-label">Date</label>
        </div>
        <div class="input-group  has-validation">
            <div class="size">
                <input selected="@Model.Appointment" name="Appoint" type="datetime-local" min="@DateTime.Now.ToString("yyyy-MM-ddThh:mm")" step="" class="name input_size" value="@Model.Appointment" required>
            </div>
            <div class="invalid-feedback">
                Please choose a username.
            </div>
        </div>
        <div class="size mt-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                <label class="  form-check-label" for="invalidCheck">
                    Agree to terms and conditions
                </label>
                <div class="invalid-feedback">
                    You must agree before submitting.
                </div>
            </div>
        </div>
        <div class="size">
            <button class="btn btn-primary mt-4" type="submit">Appointmen</button>
        </div>
    </form>
</div>
<style>
    .size {
        width: 40%;
        text-align: center;
        display: flex;
        justify-content: center;
        margin-left: 30%;
        text-align: center;
    }
    .input_size{
         margin-bottom: 8%;
         text-align: center;
     }
</style>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>        
<script src = "/js/script.js"></script>
<footer id="bottom" class="bg-dark text-white p-3 mt-5">
    <div class="container text-center" data-sr-id="14" style="visibility: visible; opacity: 1; transition: opacity 0.6s cubic-bezier(0.5, 0, 0, 1) 0s;">
        <h6 class="my-auto">Online Hospital Â© Copyright 2022 Loyalty Point</h6>
    </div>
</footer>


</html>