@model Doctor?


@{
    ViewBag.Title = "title";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style_with.css">
    <title>Document</title>
</head>
<body>
 
<header>
    <div class = "fix_bug">
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <div class="container-fluid ">
                <h1 class="page header text-light">Online Hospital</h1>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link disabled " aria-current="page" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Doctor" asp-action="List">Doctor</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active " asp-controller="Hospital" asp-action="HospitalList">Hospital</a>
                        </li>
                    </ul>


                </div>
            </div>
        </nav>
    </div>
</header>




<div class="container px-5 px-md-5 py-5 bg-white shadow border-main mb-5 doc">

    <div class="row">
        <div class="col-6  ">
            <div class="d-flex justify-content-center flex-wrap  ">
                <img src="@Model.Image" alt="" class="rounded-circle pb-4 photo">
                <h1 class="ol text-center">@Model.Name @Model.LastName</h1>
                <h4 class="text-secondary ol text-center">@Model.Profesion</h4>

            </div>
        </div>

        <div class="col-6 ">
            <div class="  d-flex  flex-column justify-content-center h-100">


                <h3 class="pb-1 w-100 red">Information:</h3>
                <h3 class="text-secondary w-100">@Model.PhoneNumber</h3>
                <h3 class="text-secondary w-100">@Model.Info</h3>
                <h3 class="pb-1 w-100 red">Work Hour:</h3>
                <h3 class="text-secondary w-100">@Model.StartHour - @Model.FinishHour </h3>
                <a class="btn btn-danger mb-2" asp-controller="Doctor" asp-action="Delete" asp-route-id="@Model.ID">Delete</a>
                <a class="btn btn-primary " asp-controller="Doctor" asp-action="Edit" asp-route-id="@Model.ID">Edit</a>

            </div>
        </div>
    </div>
</div>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>        
<script src = "/js/script.js"></script>
  <footer id="bottom" class="bg-dark text-white p-3 mt-5">
    <div class="container text-center" data-sr-id="14" style="visibility: visible; opacity: 1; transition: opacity 0.6s cubic-bezier(0.5, 0, 0, 1) 0s;">
      <h6 class="my-auto">Online Hospital Â© Copyright 2022 Loyalty Point</h6>
    </div>
  </footer>
</body>
</html>