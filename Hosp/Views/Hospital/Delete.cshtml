@model List<Hospital>


@{
    ViewBag.Title = "title";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
<meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
<meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="/css/site.css">
    <link rel="stylesheet" href="/css/style_doctor.css">

<title>Document</title>


</head>
<body>
<header>
  <div class = "fix_bug">
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      <div class="container-fluid ">
        <h1 class="page header text-light">Online Hospital</h1>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav me-auto mb-2 mb-md-0">
            <li class="nav-item">
              <a class="nav-link disabled " aria-current="page" asp-controller="Doctor" asp-action="">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" asp-controller="Doctor" asp-action="List">Doctor</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active " asp-controller="Hospital" asp-action="HospitalList">Hospital</a>
            </li>
          </ul>


        </div>
      </div>
    </nav>
  </div>
</header>



<form asp-controller ="Hospital" asp-action="Delete" class="container needs-validation mt-5" novalidate method="post" >
<div class="size mt-5 mb-5">
  <div class="row">
    <label for="validationCustom04" class="form-label">Choose Doctor</label>

    <select class="form-select " id="validationCustom04" required name="NameHospital">

      <option selected disabled value="">Choose...</option>
      @foreach (var doctor in Model)
      {
        <option value="@doctor.NameHospital">@doctor.NameHospital</option>
      }

    </select>
    <div class="invalid-feedback">
      Please select a valid state.
    </div>
  </div>
</div>
  <div class="size">
    <label for="validationCustomUsername" class="form-label">Password</label>
  </div>
  <div class="input-group has-validation">
             
    <div class="size">
      <input name="" type="text" class="form-control input_size " id="validationCustom02" placeholder="Enter your password" required>
    </div>
    <div class="invalid-feedback">
      Please choose a username.
    </div>
  </div>
  
  
  <div class="size">
    <div class="form-check">
      
      <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
      <label class="form-check-label" for="invalidCheck">
        Agree to terms and conditions
      </label>
      <div class="invalid-feedback">
        You must agree before submitting.
      </div>
    </div>
  </div>
  <div class="size">
    <button class="btn btn-primary mt-5 mb-5" type="submit">Delete Hospital</button>
  </div>
</form>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>        
<script src = "/js/script.js"></script>

<style>
      .size {
          width: 40%;
          text-align: center;
          display: flex;
          justify-content: center;
          margin-left: 30%;
          text-align: center;
      }
      .input_size{
           margin-bottom: 8%;
           text-align: center;
       }
  

  
  
  
</style>

</body>
</html>